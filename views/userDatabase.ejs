<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
</head>
<body>
    <h1>User Database</h1>
    <a href="/users/new">Add New User</a>
    <ul>
        <% users.forEach(user => { %>
            <li>
                <%= user.first_name %> <%= user.last_name %>
                <a href="/users/<%= user.user_id %>/edit">Edit</a>
                <form action="/users/<%= user.user_id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
